@model IEnumerable<Online_shoping.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Category Details
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Category Name</th>
                        <th>Action</th>

                    </tr>
                </thead>
                
                <tbody>
                    @{ 
                        int count = 1;
                    }
                    @foreach (var item in Model)
                    {

                    <tr>
                        <td>@count</td>
                        <td>@item.ProductName</td>

                        <td>@Html.ActionLink("Edit", "productEdit", new { productID = item.ProductId })</td>

                        
                    </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
